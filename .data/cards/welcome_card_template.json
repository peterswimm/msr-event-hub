{
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "fallbackText": "Welcome to MSR Event Hub - Project Green 2026. Discover cutting-edge research projects and connect with Microsoft Research teams.",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "Project Green 2026",
          "size": "large",
          "weight": "bolder",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "MSR Event Hub",
          "size": "medium",
          "weight": "bolder",
          "color": "accent",
          "spacing": "none"
        }
      ],
      "spacing": "none"
    },
    {
      "type": "TextBlock",
      "text": "Welcome! I can help you explore research projects, find sessions, and connect with researchers at the Redmond Research Showcase.",
      "wrap": true,
      "spacing": "medium"
    },
    {
      "type": "TextBlock",
      "text": "Quick Actions",
      "weight": "bolder",
      "size": "medium",
      "spacing": "medium"
    },
    {
      "type": "ColumnSet",
      "spacing": "small",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Container",
              "style": "emphasis",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Browse Projects",
                  "weight": "bolder",
                  "size": "medium",
                  "horizontalAlignment": "center"
                },
                {
                  "type": "TextBlock",
                  "text": "Explore all research projects",
                  "wrap": true,
                  "size": "small",
                  "spacing": "small",
                  "horizontalAlignment": "center"
                }
              ],
              "selectAction": {
                "type": "Action.Submit",
                "data": {
                  "action": "browse_all",
                  "intent": "project_search"
                }
              },
              "minHeight": "100px"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Container",
              "style": "emphasis",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Admin Tools",
                  "weight": "bolder",
                  "size": "medium",
                  "horizontalAlignment": "center"
                },
                {
                  "type": "TextBlock",
                  "text": "System status & organizer tools",
                  "wrap": true,
                  "size": "small",
                  "spacing": "small",
                  "horizontalAlignment": "center"
                }
              ],
              "selectAction": {
                "type": "Action.Submit",
                "data": {
                  "action": "organizer_tools",
                  "intent": "admin_dashboard"
                }
              },
              "minHeight": "100px"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "small",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Container",
              "style": "emphasis",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Find Researcher",
                  "weight": "bolder",
                  "size": "medium",
                  "horizontalAlignment": "center"
                },
                {
                  "type": "TextBlock",
                  "text": "Search by name or team",
                  "wrap": true,
                  "size": "small",
                  "spacing": "small",
                  "horizontalAlignment": "center"
                }
              ],
              "selectAction": {
                "type": "Action.Submit",
                "data": {
                  "action": "researcher_search",
                  "intent": "people_lookup"
                }
              },
              "minHeight": "100px"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Container",
              "style": "emphasis",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Today's Schedule",
                  "weight": "bolder",
                  "size": "medium",
                  "horizontalAlignment": "center"
                },
                {
                  "type": "TextBlock",
                  "text": "View sessions and agenda",
                  "wrap": true,
                  "size": "small",
                  "spacing": "small",
                  "horizontalAlignment": "center"
                }
              ],
              "selectAction": {
                "type": "Action.Submit",
                "data": {
                  "action": "hourly_agenda",
                  "intent": "session_schedule"
                }
              },
              "minHeight": "100px"
            }
          ]
        }
      ]
    }
  ]
}
