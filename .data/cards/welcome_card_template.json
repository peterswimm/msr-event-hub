{
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "id": "welcome_card",
  "fallbackText": "Welcome to MSR Event Hub Chat! I can help you explore research projects, find sessions, and learn about the Redmond Research Showcase.",
  "body": [
    {
      "type": "TextBlock",
      "id": "welcome_title",
      "text": "Welcome to MSR Event Hub Chat!",
      "size": "large",
      "weight": "bolder",
      "color": "accent",
      "spacing": "none"
    },
    {
      "type": "TextBlock",
      "id": "welcome_subtitle",
      "text": "I can help you explore research projects, find sessions, and learn about the Redmond Research Showcase.",
      "wrap": true,
      "spacing": "small"
    },
    {
      "type": "TextBlock",
      "id": "welcome_question",
      "text": "What would you like to do?",
      "weight": "bolder",
      "spacing": "medium"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "id": "action_browse",
      "title": "Browse All Projects",
      "data": {
        "action": "browse_all",
        "intent": "project_search"
      }
    },
    {
      "type": "Action.Submit",
      "id": "action_category",
      "title": "Filter by Category",
      "data": {
        "action": "category_select",
        "intent": "category_browse"
      }
    },
    {
      "type": "Action.Submit",
      "id": "action_researcher",
      "title": "Find by Researcher",
      "data": {
        "action": "researcher_search",
        "intent": "people_lookup"
      }
    },
    {
      "type": "Action.Submit",
      "id": "action_recording",
      "title": "Recording Status",
      "data": {
        "action": "recording_filter",
        "intent": "recording_status"
      }
    }
  ]
}
