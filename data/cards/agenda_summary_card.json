{
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "fallbackText": "Agenda summary is unavailable. View the agenda page for details.",
  "body": [
    {
      "type": "TextBlock",
      "text": "Today's Agenda",
      "weight": "bolder",
      "size": "medium",
      "wrap": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            { "type": "TextBlock", "text": "Time", "weight": "bolder", "wrap": true },
            { "type": "TextBlock", "text": "${sessions[0].time}", "wrap": true },
            { "type": "TextBlock", "text": "${sessions[1].time}", "wrap": true },
            { "type": "TextBlock", "text": "${sessions[2].time}", "wrap": true }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            { "type": "TextBlock", "text": "Session", "weight": "bolder", "wrap": true },
            {
              "type": "TextBlock",
              "text": "${sessions[0].title}",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${sessions[1].title}",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${sessions[2].title}",
              "wrap": true
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Open Agenda",
      "data": { "action": "open_agenda", "intent": "session_schedule" }
    }
  ]
}
