# LLM Configuration
# Choose one: openai, azure-openai, anthropic
LLM_PROVIDER=azure-openai

# Azure OpenAI (managed identity by default; leave AZURE_OPENAI_KEY empty in production)
# Compatible with msrchat configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_RESOURCE=your-resource-name
AZURE_OPENAI_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_MODEL_NAME=gpt-35-turbo-16k
AZURE_OPENAI_VERSION=2024-02-15-preview
AZURE_OPENAI_STREAM=True
AZURE_OPENAI_TEMPERATURE=0.3
AZURE_OPENAI_TOP_P=1.0
AZURE_OPENAI_MAX_TOKENS=1000
AZURE_OPENAI_STOP_SEQUENCE=
AZURE_OPENAI_SYSTEM_MESSAGE=You are an AI assistant for the MSR Event Hub. Help users find information about events, projects, sessions, and researchers.

# OpenAI (if using openai provider)
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-4

# Anthropic (if using anthropic provider)
ANTHROPIC_API_KEY=your-anthropic-key-here
ANTHROPIC_MODEL=claude-opus-4-1-20250805

# Azure Identity (for managed authentication)
AZURE_TENANT_ID=your-tenant-id
AZURE_SUBSCRIPTION_ID=your-subscription-id

# Query Routing Configuration
ENABLE_DETERMINISTIC_ROUTING=true
ROUTING_STRATEGY=deterministic_first
DETERMINISTIC_CONFIDENCE_THRESHOLD=0.8
LLM_ASSIST_CONFIDENCE_THRESHOLD=0.6
LOG_ROUTING_DECISIONS=true
EMIT_ROUTING_METRICS=true

# A/B Testing (optional)
ROUTING_AB_TEST_ENABLED=false
AB_TEST_DETERMINISTIC_RATIO=0.5

# Event Data Source
# Options: "api" (use live Event Hub APIs) or "mock" (use local JSON file)
# Set to "mock" for local development without backend dependencies
EVENT_DATA_SOURCE=api

# Mock Data Path (only used when EVENT_DATA_SOURCE=mock)
# Path to local JSON file with hardcoded event data
MOCK_DATA_PATH=data/mock_event_data.json

# Azure Foundry SaaS Orchestration (for complex multi-agent queries)
# Enable delegation of low-confidence queries to Foundry Agent Service
DELEGATE_TO_FOUNDRY=false

# Foundry endpoint URL (required if DELEGATE_TO_FOUNDRY=true)
# Format: https://<resource-name>.cognitiveservices.azure.com
FOUNDRY_ENDPOINT=

# Primary orchestrator agent ID in Foundry
FOUNDRY_AGENT_ID=msr-event-orchestrator

# Confidence threshold for delegating to Foundry (0.0-1.0)
# Queries with confidence below this use Foundry instead of Azure OpenAI
FOUNDRY_DELEGATION_CONFIDENCE_THRESHOLD=0.8

# Foundry API version
FOUNDRY_API_VERSION=2025-11-15-preview

# Foundry request timeout in seconds
FOUNDRY_TIMEOUT_SECONDS=30

# POC Configuration
LOG_LEVEL=INFO
ENABLE_TELEMETRY=true
REVIEW_MODE=true

# Extraction Settings
PAPER_EXTRACTION_MODEL=gpt-4
TALK_EXTRACTION_MODEL=gpt-4
REPOSITORY_EXTRACTION_MODEL=gpt-4

# Confidence Thresholds
MIN_CONFIDENCE_SCORE=0.7

# Output Configuration
OUTPUT_FORMAT=json
INCLUDE_HUMAN_SUMMARY=true
